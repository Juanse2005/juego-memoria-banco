{
  "name": "juego-memoria",
  "version": "1.0.0",
  "description": "Juego de memoria portable con Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "Tu Nombre",
  "license": "MIT",
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.15.1"
  },
  "build": {
    "appId": "com.ejemplo.juegomemoria",
    "productName": "Juego de Memoria",
    "directories": {
      "output": "build"
    },
    "files": [
      "index.html",
      "main.js",
      "js/**/*",
      "css/**/*",
      "img/**/*",
      "memo.json",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}